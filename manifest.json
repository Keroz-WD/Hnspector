{
  "manifest_version": 3,
  "name": "Hnspector",
  "version": "0.1",
  "description": "A web page's Hn tags analyser.",
  "author": "bonjour@keroz.fr",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "Analyse Hn tags",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "run_at": "document_end"  
    }
  ],
  "permissions" : ["activeTab"]
}